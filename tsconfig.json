{
    "compilerOptions": {
        "outDir": "./built",
        "target": "es6",
        "alwaysStrict": true,
        "baseUrl": "./",
        "declaration": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "preserveConstEnums": true,
        "removeComments": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/**/*"
    ]
}