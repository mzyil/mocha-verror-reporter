{
    "compilerOptions": {
        "alwaysStrict": true,
        "baseUrl": "./",
        "declaration": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "outDir": "./built",
        "preserveConstEnums": true,
        "removeComments": true,
        "strictFunctionTypes": true,
        "strictNullChecks": true,
        "target": "es6"
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ]
}
